# VeltoPHP .htaccess Configuration
#
# This file configures Apache for VeltoPHP, securing sensitive files and directories,
# enabling URL rewriting, and adding security headers. Created by Ketut Dana.
#
# @package VeltoPHP
# @author  Ketut Dana <dev@veltophp.com>
# @version 2.0

<IfModule mod_rewrite.c>
    # Enable URL rewriting
    RewriteEngine On
    RewriteBase /

    # Block access to sensitive directories to prevent unauthorized access
    RewriteRule ^(storage|vendor|config|resources|modules/[^/]+/views|modules/[^/]+/config)/ - [F,L,NC]

    # Redirect all requests to index.php for non-existent files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

<IfModule mod_alias.c>
    # Block access to sensitive files (.env, .sqlite, .log, etc.)
    <FilesMatch "(\.env|\.sqlite|\.log|\.bak|\.gitignore|composer\.(json|lock)|config\.php)$">
        Require all denied
    </FilesMatch>
</IfModule>

<IfModule mod_headers.c>
    # Security headers to protect against common attacks
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

<IfModule mod_env.c>
    # Disable TRACE method to prevent cross-site tracing
    SetEnvIf Request_Method TRACE block
    <IfModule mod_rewrite.c>
        RewriteCond %{ENV:block} 1
        RewriteRule .* - [F,L]
    </IfModule>
</IfModule>

# Custom error handling for 404 errors
ErrorDocument 404 /index.php